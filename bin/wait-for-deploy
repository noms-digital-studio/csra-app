#!/usr/bin/env node

/* eslint-disable no-console, comma-dangle */

const poolEndpointForGitRef = require('../utils/scripts/wait-for-deployment');

console.log('Starting pool for status endpoint...');

setTimeout(
  () => {
    poolEndpointForGitRef({
      appUrl: process.env.APP_BASE_URL,
      gitRef: process.env.GIT_REF,
      retryCount: 60,
      onSuccess: (result) => {
        console.log(result);
        process.exit(0);
      },
      onError: () => {
        console.log(`Failed to receive an "OK" status from ${process.env.APP_BASE_URL}`);
        process.exit(1);
      },
    });
  },
  process.env.WAIT_DURATION
);
